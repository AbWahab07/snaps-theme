{%- assign grid_item_width = 'small--one-half medium-up--one-quarter' -%}

<div data-section-id="{{ section.id }}" data-section-type="collection-template">
{%- if collection.image -%}
  <header class="collection-header">
    <div class="collection-hero">
      <div class="collection-hero__image ratio-container lazyload js"
            data-bgset="{% include 'bgset', image: collection.image %}"
            data-sizes="auto"
            data-parent-fit="cover"
            style="background-image: url('{{ collection.image | img_url: '1200x300' }});">
      </div>
      <noscript>
        <div class="collection-hero__image" style="background-image: url({{ collection.image | img_url: '2048x600' }});"></div>
      </noscript>
    </div>
  </header>
{%- endif -%}
  <div class="page-width" id="Collection">
    <div class="collection-grid-container grid--uniform grid{% if collection.products_count > 0 %} grid--view-items{% endif %}{% if collection.image %} has-image{% endif %}">
      {%- for product in collection.products -%}
        <div class="grid__item product grid__item--{{section.id}} small--one-half medium-up--one-quarter">
          {% include 'product-card-grid' %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>




{% schema %}
{
  "name": "Collection pages",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show product vendors",
      "default": true
    }
  ]
}
{% endschema %}
