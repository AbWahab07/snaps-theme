<div class="page-width">
  <div class="richtext">
    <div class="richtext__content">
      {% if section.settings.title != blank %}
        <div class="richtext__title text-center">
          <h3>{{ section.settings.title | escape }}</h3>
        </div>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rte-setting text-center">{{ section.settings.text }}</div>
      {% endif %}
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Rich Text",
  "class": "index-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "Rich text",
      "category": "Text"
    }
  ]
}
{% endschema %}
