{% case section.blocks.size %}
  {% when 1 %}
    {%- assign grid_item_width = 'medium-up--one-whole' -%}
  {% when 2 %}
    {%- assign grid_item_width = 'small--one-whole medium-up--one-half' -%}
  {% when 3 %}
    {%- assign grid_item_width = 'small--one-whole medium-up--one-third' -%}
  {% when 4 %}
    {%- assign grid_item_width = 'small--one-whole medium-up--one-quarter' -%}
{% endcase %}

<div class="page-width" data-section-id="{{ section.id }}" data-section-type="collection-showcase">
  <ul class="grid grid--uniform grid--view-items">
    {% for block in section.blocks %}
      <li class="grid__item grid__item--{{section.id}} {{grid_item_width}} collection-showcase__griditem">
        <a href="{{collections[block.settings.collection].url}}">
          <div class="collection-showcase__content-image" style="background-image: url('{{ block.settings.collection_image | img_url: 'x300' }});"></div>
          <div class="collection-showcase__content">
            {{block.settings.text}}
          </div>
        </a>
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "Collection Showcase",
  "class": "index-section",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "id": "collection_image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection"
        },
        {
          "id": "text",
          "type": "text",
          "label": "Link Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Collection",
      "name": "Collection Showcase"
    }
  ]
}
{% endschema %}