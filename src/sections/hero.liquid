{% include 'header-image' %}
{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "header_image",
        "label": "Hero Image"
      },
      {
        "type": "checkbox",
        "id": "full_height",
        "label": "Full Screen Hero?"
      }
    ],
    "max_blocks": 1,
    "blocks": [
      {
        "type": "hero_text",
        "name": "Hero Content",
        "settings": [
          {
            "type": "header",
            "content": "Content Layout"
          },
          {
            "type": "select",
            "id": "alignment",
            "options": [
              { "value": "content-align-right", "label": "Right"},
              { "value": "content-align-left", "label": "Left"}
            ],
            "label": "Alignment"
          },
          {
            "type": "header",
            "content": "Hero Content"
          },
          {
            "id": "small_header",
            "type": "text",
            "label": "Small Header"
          },
          {
            "id": "main_header",
            "type": "text",
            "label": "Main Header"
          },
          {
            "id": "body",
            "type": "textarea",
            "label": "Body Content"
          },
          {
            "type": "header",
            "content": "Call To Action"
          },
          {
            "id": "show_cta_button",
            "type": "checkbox",
            "label": "Show Call To Action Button?"
          },
          {
            "id": "cta_text",
            "type": "text",
            "label": "Button Label"
          },
          {
            "id": "cta_url",
            "type": "url",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Image",
        "category": "Layout"
      }
    ]
  }
{% endschema %}