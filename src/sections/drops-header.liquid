{% include 'header-image' %}
{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "header_image",
        "label": "Header Image"
      }
    ],
    "max_blocks": 1,
    "blocks": [
      {
        "type": "header_text",
        "name": "Header Content",
        "settings": [
          {
            "type": "header",
            "content": "Content Layout"
          },
          {
            "type": "select",
            "id": "alignment",
            "options": [
              { "value": "content-align-right", "label": "Right"},
              { "value": "content-align-left", "label": "Left"}
            ],
            "label": "Alignment"
          },
          {
            "type": "header",
            "content": "Header Content"
          },
          {
            "id": "main_header",
            "type": "text",
            "label": "Main Header"
          },
          {
            "id": "body",
            "type": "textarea",
            "label": "Body Content"
          },
          {
            "id": "show_subscribe_form",
            "type": "checkbox",
            "label": "Show Subscribe Form?"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Image",
        "category": "Layout"
      }
    ]
  }
{% endschema %}