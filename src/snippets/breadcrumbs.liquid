{% if template != "index" %}

{% capture breadcrumb_root %}
  {% if template contains 'collection' or template contains 'product' %}
    Shop All
    {% if template == "list-collections" %}
      {% assign breadcrumb_root_style = 'selected' %}
    {% endif %}
  {% elsif template contains 'page' %}
    {{ page.title }}
    {% assign breadcrumb_root_style = 'selected' %}
  {% endif %}
{% endcapture %}

<div data-section-id="breadcrumbs" data-section-type="breadcrumbs" class="breadcrumb-container">
  <ul class="breadcrumb-navigation">
    <li>
      <a href="/collections" class="{{ breadcrumb_root_style }}">{{ breadcrumb_root }}</a>
    </li>
    {% if template == 'collection' %}
    <li>></li>
    <li>
      <a href="{{ collection.url }}" class="selected">{{ collection.title }} Series</a>
    </li>
    {% elsif template == 'product' %}
    <li>></li>
    <li>
      <a href="{{ product.collections[0].url }}">{{ product.collections[0].title }} Series</a>
    </li>
    <li>></li>
    <li>
      <a href="{{ product.url }}" class="selected">{{ product.selected_or_first_available_variant.sku }}</a>
    </li>
    {% endif %}
  </ul>
</div>
{% endif %}